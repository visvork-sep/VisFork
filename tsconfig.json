{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@__generated__/*": [
                "__generated__/*"
            ]
            // "@hello/*": [ // define your own modules here
            //     "src/hello/*"
            // ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "__generated__/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}